# (Opcional) Si te lo permite el vhost; si da error, bórralo
# Options +SymLinksIfOwnerMatch

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /admin/

    # No reescribir si el recurso físico existe
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # /admin/ → /admin/index.php
    RewriteRule ^$ index.php [L,QSA]

    # /admin/index/ → /admin/modules/index.php
    RewriteRule ^index/?$ modules/index.php [L,QSA]

    # (Opcional) catch‑all hacia index.php
    # RewriteRule . index.php [L,QSA]
</IfModule>